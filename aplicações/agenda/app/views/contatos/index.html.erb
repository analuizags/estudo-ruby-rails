<div class="form-style-5">
  <p id="notice"><%= notice %></p>

  <h1> <%= t('message.listing') %> Contatos</h1>

  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Tipo</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @contatos.each do |contato| %>
        <tr style="background-color: <%= cycle('whitesmoke', 'rgb(224, 224, 224)') %>">
          <td><%= contato.nome %></td>
          <td><%= contato.tipo.descricao %></td>
          <td><%= link_to t('buttons.show'), contato %></td>
          <td><%= link_to t('buttons.edit'), edit_contato_path(contato) %></td>
          <td><%= link_to t('buttons.destroy'), contato, method: :delete, data: { confirm: t('message.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br><br>
  <span style="text-align: center">
    <%= paginate @contatos %>
  </span>
  <br>

  <%= link_to t('buttons.new'), new_contato_path %>

  <% pagina = 'contatos' %>
  <span style="position:absolute; bottom:0; width:35%;">
    <%= render partial: "/contatos/shared/footer", locals: { pg: pagina } %>
  </span>

</div>

