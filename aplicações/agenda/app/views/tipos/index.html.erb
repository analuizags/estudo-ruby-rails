<div class="form-style-5">
  <script>
    $.notify("<%= notice %>", "success");
  </script>

  <h1>Listando Tipos</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Descricao</th>
        <th colspan="2" style="text-align:center">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @tipos.each do |tipo| %>
        <tr>
          <td><%= tipo.descricao %></td>
          <td> <%= link_to t('buttons.edit'), edit_tipo_path(tipo) %> </td>
          <td> <%= link_to t('buttons.destroy'), tipo, method: :delete, data: { confirm: t('message.confirm') } %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to t('buttons.new'), new_tipo_path, class: "btn btn-success"%>
  <%= link_to t('buttons.home'), root_path, class: "btn btn-primary"%>
</div>