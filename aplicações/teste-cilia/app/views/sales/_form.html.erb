<%= form_with(model: sale, local: true) do |form| %>
  <% if sale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

      <ul>
      <% sale.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :customer_id %>
    <%= form.collection_select :customer_id, Customer.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, options_for_select([['Pending', 'pending'], ['Completed', 'completed'], ['Canceled', 'canceled']], sale.status) %>
  </div>

  <h3>Products</h3>
  <div id="products">
    <%= form.fields_for :sale_products do |sp_form| %>
      <div class="nested-fields">
        <%= render 'sale_product_fields', f: sp_form %>
      </div>
    <% end %>
  </div>
  <%= link_to_add_association "Add Product", form, :sale_products %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
