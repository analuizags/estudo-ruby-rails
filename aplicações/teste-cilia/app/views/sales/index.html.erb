<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<h1>Sales</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Status</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.customer.name %></td>
        <td><%= sale.status %></td>
        <td><%= link_to 'Show', sale %></td>
        <td><%= link_to 'Edit', edit_sale_path(sale) if customer_signed_in? %></td>
        <td><%= link_to 'Cancel', cancel_sale_path(sale) %></td>
        <td><%= link_to 'Complete', complete_sale_path(sale) if admin_signed_in? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sale', new_sale_path if customer_signed_in? %>
