<div class="nested-fields">
  <div class="field">
    <%= f.label :product_id %>
    <%= f.number_field :product_id %>
  </div>

  <div class="field">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, min: 1 %>
  </div>

  <div class="actions">
    <%= link_to_remove_association "Remove Product", f %>
  </div>
</div>
